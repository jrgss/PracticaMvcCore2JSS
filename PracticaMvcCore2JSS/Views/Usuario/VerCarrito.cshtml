@model List<Libro>
    <h1>Carrito</h1>


@if (Model.Count == 0)
{
    <h1>Tienes el carrito vacío</h1>
}
else
{
    
    <ul>
    @foreach(Libro lib in Model)
    {
        <li>@lib.Titulo</li>
    }
</ul>
<a asp-controller="Libros" asp-action="HacerPedido" class="btn btn-success">Finalizar Compra</a>
}
